<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="org.pispeb.treff_client.view.group.GroupViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.constraint.Guideline
            android:id="@+id/vertGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="75dp"/>

        <Switch
            android:id="@+id/switchMuteChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:showText="false"
            android:padding="@dimen/paddding_standard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vertGuide"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mute_chat_setting"
            app:layout_constraintStart_toEndOf="@id/vertGuide"
            app:layout_constraintTop_toTopOf="@id/switchMuteChat"
            app:layout_constraintBottom_toBottomOf="@id/switchMuteChat"/>

        <Switch
            android:id="@+id/switchMutePos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:showText="false"
            android:padding="@dimen/paddding_standard"
            app:layout_constraintTop_toBottomOf="@id/switchMuteChat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vertGuide"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mute_location_requests_settings"
            app:layout_constraintStart_toEndOf="@id/vertGuide"
            app:layout_constraintTop_toTopOf="@id/switchMutePos"
            app:layout_constraintBottom_toBottomOf="@id/switchMutePos"/>

        <Space
            android:id="@+id/separator"
            android:layout_width="0dp"
            android:layout_height="@dimen/paddding_standard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switchMutePos"/>

        <Space
            android:id="@+id/addContact"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/friendIcon"
            app:layout_constraintBottom_toBottomOf="@id/friendIcon"
            android:onClick="@{() -> vm.addMember()}"/>

        <ImageView
            android:id="@+id/friendIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_add_black_24dp"
            android:contentDescription="@string/add_contact"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vertGuide"
            app:layout_constraintTop_toBottomOf="@id/separator"
            android:padding="@dimen/paddding_standard"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_contact"
            app:layout_constraintStart_toEndOf="@id/vertGuide"
            app:layout_constraintTop_toTopOf="@id/friendIcon"
            app:layout_constraintBottom_toBottomOf="@id/friendIcon"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/friendIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/delete"/>


        <Space
            android:id="@+id/leaveGroup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/friendIcon"
            app:layout_constraintBottom_toBottomOf="@id/friendIcon"
            android:onClick="@{() -> vm.addMember()}"/>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_add_black_24dp"
            android:contentDescription="@string/add_contact"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vertGuide"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/paddding_standard"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_group"
            app:layout_constraintStart_toEndOf="@id/vertGuide"
            app:layout_constraintTop_toTopOf="@id/delete"
            app:layout_constraintBottom_toBottomOf="@id/delete"/>


    </android.support.constraint.ConstraintLayout>
</layout>
